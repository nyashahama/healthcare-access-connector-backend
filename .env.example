# Database
DB_URL=postgres://postgres:admin@localhost:5432/dbname?sslmode=disable

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this
JWT_EXPIRY_HOURS=24

# Server
PORT=8080
LOG_LEVEL=info
TIMEOUT_SECONDS=30
ENVIRONMENT=development
ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=20

# External Services
REDIS_URL=redis://localhost:6379
NATS_URL=nats://localhost:4222
CACHE_TTL_MINUTES=5

# ============================================
# EMAIL CONFIGURATION
# ============================================

# Email Provider: "ses" for AWS SES (production) or "smtp" for local dev
EMAIL_PROVIDER=smtp

# Email From Address and Name
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# ============================================
# SMTP Configuration (for local development)
# ============================================
# Use Mailpit for local testing: http://localhost:8025
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false

# ============================================
# AWS SES Configuration (for production)
# ============================================
# Set EMAIL_PROVIDER=ses to use AWS SES

# AWS Region (e.g., us-east-1, us-west-2, eu-west-1)
AWS_REGION=us-east-1

# AWS Credentials (optional if using IAM roles)
# Leave empty if using IAM instance roles or ECS task roles
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

