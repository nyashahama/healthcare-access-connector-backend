# ============================================
# Healthcare Access Connector - Environment Variables
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# SECURITY
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-secret-key-min-32-characters
JWT_EXPIRY_HOURS=24
SMS_ENABLED=false

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=8080
ENVIRONMENT=production
TIMEOUT_SECONDS=30
LOG_LEVEL=info

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins (NO TRAILING SLASHES)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_RPS=50
RATE_LIMIT_BURST=100

# ============================================
# EXTERNAL SERVICES
# ============================================
REDIS_URL=redis://your-redis-host:6379
NATS_URL=nats://your-nats-host:4222
CACHE_TTL_MINUTES=5

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_PROVIDER=smtp
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=Healthcare Access Connector

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# AWS SES Configuration (Alternative to SMTP)
# EMAIL_PROVIDER=ses
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret

# ============================================
# HEALTHCARE SPECIFIC
# ============================================
APPOINTMENT_REMINDER_HOURS=24
MAX_APPOINTMENTS_PER_DAY=10
PROVIDER_SEARCH_RADIUS_KM=50
